@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
    </ol>
    <div class="carousel-inner" role="listbox">
        @*------Home screen-----*@
        <div class="item active">
            <img src="~/images/dandelions.jpg" alt="Allergy" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Allergy Partners</h1>
                <p>
                    Allergy Partners has been providing top quality care for allergy relief many years.
                </p>
                <a class="btn btn-default" style="background-color: navy; color:lightgoldenrodyellow; margin-bottom: 100px;" href="~/Appointment/Index">
                    Make an Appointment
                </a>
            </div>
        </div>
        @*--------Services-----*@
        <div class="item">
            <img src="~/images/Allergy.jpg" alt="Services" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Need Relief?</h1>
                <p>
                    Do you need relief from your allergy symptoms? Let us help. We specialize in treating a variety of conditions.
                </p>
                <a class="btn btn-default" style="background-color: navy; color:lightgoldenrodyellow; margin-bottom: 100px;" href="~/conditions">
                    Learn More
                </a>
            </div>
        </div>
        @*----Locations-----*@
        <div class="item">
            <img src="~/images/Clinic.jpg" alt="Locations" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Locations</h1>
                <p>
                    Our practice has multiple offices all around Houston. Find an office near you.
                </p>
                <a class="btn btn-default" style="background-color: navy; color:lightgoldenrodyellow; margin-bottom: 100px;" href="~/Home/Offices">
                    Locations
                </a>
            </div>
        </div>
        @*-----Pollen Map-----*@
        @*<div class="item">
                <img src="~/images/AAAAIpollenMap.jpg" alt="PollenMap" class="img-responsive" />
                <h1>Pollen Map</h1>
                <div class="carousel-caption" role="option">
                    <p>
                        See what pollen conditions are like in your area with this map from the AAAAI.
                        <a class="btn btn-default" href="http://www.aaaai.org/global/nab-pollen-counts?ipb=1">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>*@
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

